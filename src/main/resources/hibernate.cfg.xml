<?xml version='1.0' encoding='utf-8'?>
<!DOCTYPE hibernate-configuration PUBLIC
        "-//Hibernate/Hibernate Configuration DTD//EN"
        "http://hibernate.sourceforge.net/hibernate-configuration-3.0.dtd">

<hibernate-configuration>
	<session-factory>
		<property name="connection.driver_class">org.h2.Driver</property>
		<property name="connection.url">jdbc:h2:mem:test;DB_CLOSE_DELAY=-1</property>
		<property name="dialect">org.hibernate.dialect.H2Dialect</property>
		<property name="show_sql">false</property>
		<property name="hbm2ddl.auto">create</property>
		<property name="connection.pool_size">200</property>
		<mapping class="com.moneytransfer.repository.entity.Client" />
		<mapping class="com.moneytransfer.repository.entity.Account" />
	</session-factory>
</hibernate-configuration>